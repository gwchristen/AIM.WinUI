<UserControl
    x:Class="AIM.WinUI.Views.Tabs.BrowseTab"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    Loaded="UserControl_Loaded">

	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="*"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>

		<muxc:ListView x:Name="FileList"
                       SelectionMode="Extended"
                       IsMultiSelectCheckBoxEnabled="True"
                       DoubleTapped="FileList_DoubleTapped"/>

		<StackPanel Grid.Row="1" Orientation="Horizontal" Spacing="8" Padding="8">
			<Button Content="Archive" Click="Archive_Click"/>
			<Button Content="Shipped" Click="Shipped_Click"/>
			<Button Content="Refresh" Click="Refresh_Click"/>
		</StackPanel>
	</Grid>
</UserControl>
