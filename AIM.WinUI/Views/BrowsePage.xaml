<Page
    x:Class="AIM.Views.BrowsePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:AIM.WinUI.Models"
    mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="320"/>
            <ColumnDefinition Width="8"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Tree -->
        <Grid Grid.Column="0">
            <TreeView x:Name="FolderTree"
                      Expanding="FolderTree_Expanding"
                      ItemInvoked="FolderTree_ItemInvoked"
                      RightTapped="FolderTree_RightTapped">
                <TreeView.NodeTemplate>
                    <DataTemplate x:DataType="models:FsItem">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <FontIcon Glyph="{x:Bind Glyph}"/>
                            <TextBlock Text="{x:Bind Name}" />
                        </StackPanel>
                    </DataTemplate>
                </TreeView.NodeTemplate>
            </TreeView>
        </Grid>

        <!-- Divider -->
        <Rectangle Grid.Column="1" Fill="{ThemeResource DividerStrokeColorDefaultBrush}" Width="1"/>

        <!-- Details / file list (placeholder) -->
        <Grid Grid.Column="2">
            <TextBlock Text="Select a folder to view its contentsâ€¦" 
                       VerticalAlignment="Center" HorizontalAlignment="Center" 
                       Opacity="0.6"/>
        </Grid>

        <!-- Context menu for TreeView -->
        <Grid x:Name="ContextMenuHost" IsHitTestVisible="False">
            <Grid.ContextFlyout>
                <MenuFlyout x:Name="TreeContextMenu">
                    <MenuFlyoutItem Text="Open" Icon="OpenFile" Click="OpenFolder_Click"/>
                    <MenuFlyoutSeparator/>
                    <MenuFlyoutItem Text="New Folder" Icon="NewFolder" Click="NewFolder_Click"/>
                    <MenuFlyoutItem Text="Rename" Icon="Edit" Click="Rename_Click"/>
                    <MenuFlyoutItem Text="Move to Archive" Icon="Archive" Click="MoveToArchive_Click"/>
                    <MenuFlyoutItem Text="Properties" Icon="Document" Click="Properties_Click"/>
                </MenuFlyout>
            </Grid.ContextFlyout>
        </Grid>
    </Grid>
</Page>
